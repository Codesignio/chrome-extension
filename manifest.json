{
  "name": "Screenshotter",
  "description": "Capture webpage screenshots",
  "version": "1.0",
  "permissions": [
    "tabs",
    "activeTab",
    "*://*/*",
    "<all_urls>"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background-compiled.js"]
  },
  "manifest_version": 2
}
