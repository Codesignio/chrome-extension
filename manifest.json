{
  "name": "Codesign.io",
  "description": "The simplest feedback tool for live web-sites",
  "version": "1.1",
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://widget.intercom.io/ https://js.intercomcdn.com/; object-src 'self' ",
  "permissions": [
    "tabs",
    "activeTab",
    "<all_urls>",
    "contextMenus"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background-compiled.js"]
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts":[
    {
      "matches":["*://*/*","file:///*"],
      "js":["trackMousePos.js"],
      "run_at": "document_start"
    }
  ],
  "manifest_version": 2,
  "externally_connectable": {
    "matches": [
      "http://www.codesign.io/*",
      "http://localhost:3000/*",
      "http://web.feature.codesign.io/*"
    ]
  }
}
