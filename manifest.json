{
  "name": "CodeSign.io browser plugin",
  "description": "Simplest feedback tool",
  "version": "1.0",
  "permissions": [
    "tabs",
    "activeTab",
    "<all_urls>",
    "contextMenus"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background-compiled.js"]
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts":[
    {
      "matches":["*://*/*","file:///*"],
      "js":["trackMousePos.js"],
      "run_at": "document_start"
    }
  ],
  "manifest_version": 2
}
