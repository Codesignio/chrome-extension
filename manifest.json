{
  "name": "Screenshotter",
  "description": "Capture webpage screenshots",
  "version": "1.0",
  "permissions": [
    "tabs",
    "activeTab",
    "<all_urls>",
    "contextMenus"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background-compiled.js"]
  },
  "content_scripts":[
    {
      "matches":["*://*/*","file:///*"],
      "js":["trackMousePos.js"]
    }
  ],
  "manifest_version": 2
}
